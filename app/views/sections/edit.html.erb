<%= link_to("<< Back to list", sections_path, :class => 'back-link') %>

<div class="sections edit">
  <h2>Update section</h2>
  
  <%= form_for(@section, :url => section_path(@section), :method => 'patch') do |f| %>
  
    <%= render(:partial => 'form', :locals => {:f => f}) %>
    
    
    <div class="form-buttons">
      <%= f.submit("Update Section") %>
    </div>
    
  <% end %>
</div>  
<table summary="Subject form fields">
  <tr>
    <th>Name</th>
    <td><%= f.select(:name, Subject.all.pluck(:name)) %></td>
  </tr>
  <tr>
    <th>Position</th>
    <td><%= f.select(:position, 1..4) %></td>
  </tr>
  <tr>
    <th>Visible</th>
    <td><%= f.check_box(:visible) %></td>
  </tr>
</table>